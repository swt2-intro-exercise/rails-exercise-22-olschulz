<h1>Authors</h1>
<table>
    <tr>
        <th>Name</th>
        <th>Homepage</th>
    </tr>
    <% @authors.each do |author| %>
      <td> <%= link_to author.name, author %> </td>
      <td><a href="<%=  author.homepage %>"><%= author.homepage %></a></td>
    <% end %>
</table>
<br>
<%= link_to 'Add New Author', new_author_path %>