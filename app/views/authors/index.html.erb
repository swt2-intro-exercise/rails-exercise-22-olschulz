<h1>Authors</h1>
<table>
    <tr>
        <th>Name</th>
        <th>Homepage</th>
        <th></th>
        <th></th>
    </tr>
    <% @authors.each do |author| %>
      <td> <%= link_to author.name, author %> </td>
      <td><a href="<%=  author.homepage %>"><%= author.homepage %></a></td>
      <td> <%= link_to 'Edit', edit_author_path(author) %></td>
      <td> <%= link_to 'Delete', author_path(author), method: :delete %></td>
    <% end %>
</table>
<br>
